{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "counter-nginx-frontend",
    "creationTimestamp": null,
    "labels": {
      "service": "counter-nginx-frontend"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "service": "counter-nginx-frontend"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "service": "counter-nginx-frontend",
          "app": "nginx",
          "tier": "frontend"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "counter-nginx-frontend",
            "image": "evergreenitco/corp_website_example_nginx:1.0.13",
            "command": [ "confd-watch" ],
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "REDIS_HOST",
                "value": "172.17.4.2"
              },
              {
                "name": "REDIS_PORT",
                "value": "6379"
              }
            ],
            "resources": {
                "requests": {
			"memory": "64Mi",
			"cpu": "0.2"
		},
		"limits": {
			"memory": "128Mi",
			"cpu": "0.4"
		}
            }
          }
        ],
        "restartPolicy": "Always"
      }
    },
    "strategy": {}
  },
  "status": {}
}
