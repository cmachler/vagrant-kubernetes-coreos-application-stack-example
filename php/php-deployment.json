{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "counter-php-fpm",
    "creationTimestamp": null,
    "labels": {
      "service": "counter-php-fpm"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "service": "counter-php-fpm"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "service": "counter-php-fpm",
          "app": "php-fpm",
          "tier": "frontend"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "counter-php-fpm",
            "image": "evergreenitco/corp_website_example_php:1.0.2",
            "ports": [
              {
                "containerPort": 9000,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "MYSQL_DATABASE",
                "value": "web_counter"
              },
              {
                "name": "MYSQL_USER",
                "value": "web_counter"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "P@ssw0rd!"
              },
              {
                "name": "CODE_VERSION",
                "value": "1.0.1"
              }
            ],
            "resources": {
                "requests": {
			"memory": "64Mi",
			"cpu": "0.2"
		},
		"limits": {
			"memory": "128Mi",
			"cpu": "0.4"
		}
            }
          }
        ],
        "restartPolicy": "Always"
      }
    },
    "strategy": {}
  },
  "status": {}
}
